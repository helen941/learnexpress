{% extends 'partials/layout.njk' %}
{% block title %}About{% endblock %}
{% block content %}
<h1>Test Form</h1>
<form action="/answers">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input name="name" type="text" class="form-control" id="name" placeholder="ära kirjuta siia sa väike lammas"></div>
        <div class="mb-3">
            <label for="bio" class="form-label">Mis sul jälle vaja on</label>
            <textarea name="bio" class="form-control" id="bio" rows="5"></textarea>
        </div>
        <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="number" min="0" max="200" class="form-control" id="age" placeholder="Write your age"></div>
            <div class="mb-3">
                <label for="bday" class="form-label">Birth date</label>
                <input type="date" class="form-control" id="bday" placeholder="Write your birth date"></div>
                <div class="mb-3">
                    <label for="favcolor" class="form-label">Favourite color</label>
                    <input type="color" class="form-control" id="favcolor">
                        <div class="mb-3">
                            <label for="cool" class="form-label">Did you cool</label>
                            <input type="checkbox" class="form-check-inputr" id="cool"></div>
                            <div class="mb-3">
                                <p>Choose your quest</p>
                                <input name="pokemon" type="radio" class="form-check-inputr" id="bulbasaur" value="bulbasaur">
