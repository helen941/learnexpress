                                    <input name="pokemon" type="radio" class="form-check-inputr" id="squirtle" value="squirtle">
                                        <label for="squirtle" class="form-label">squirtle</label>
                                        <input name="pokemon" type="radio" class="form-check-inputr" id="pikachu" value="pikachu">
                                            <label for="pikachu" class="form-label">pikachue</label>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <p>Food order</p>
                                        <input name="Food" type="checkbox" class="form-check-inputr" id="burger" value="burger">
                                            <label for="burger" class="form-label">Burger</label>
                                            <input name="Food" type="checkbox" class="form-check-inputr" id="pizza" value="pizza">
                                                <label for="pizza" class="form-label">Pizza</label>
                                                <input name="Food" type="checkbox" class="form-check-inputr" id="icecream" value="icecream">
                                                    <label for="icecream" class="form-label">icecream</label>
                                                </div>
                                            
                                            <div class="mb-3">
                                                <label for="fruit" class="form-label">Favorite fruit</label>
                                                <select id="fruit" class="form-select">
                                                    <option disabled="disabled" selected="selected">
                                                        Select fruit</option>
                                                    <option>Banana</option>
                                                    <option>Orange</option>
                                                    <option>Apple</option>
                                                    <option>Pear</option>
                                                </select>
                                            </div>
